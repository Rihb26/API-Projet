<!-- form handling -->
<form action="/api/missions" method="POST" id="add_mission">
    <div class="new_user">
        <div class="form-group">
            <label for="titre" class="text-light">Titre</label>
            <input type="hidden" name="id" value="">
            <input type="text" name="titre" value="" placeholder="Mark Stoenis">
        </div>
        <div class="form-group">
            <label for="description" class="text-light">Description</label>
            <input type="text" name="description" value="" placeholder="description">
        </div>
        <div class="form-group">
            <label for="statut" class="text-light">Statut</label>
            <input type="text" name="statut" value="" placeholder="statut">
        </div>
        <div class="form-group">
            <label for="metier" class="text-light">metier</label>
            <input type="text" name="metier" value="" placeholder="metier">
        </div>
        <div class="form-group">
            <label for="competence" class="text-light">competence</label>
            <input type="text" name="competence" value="" placeholder="competence">
        </div>
        <div class="form-group">
            <label for="montant" class="text-light">montant</label>
            <input type="number" name="montant" value="" placeholder="montant">
        </div>
        <div class="form-group">
            <button type="submit" class="btn text-dark update">Save</button>
        </div>
    </div>
</form>