<!-- include header -->
<%- include('include/_header') %>
    <!-- /include header -->

    <!-- Main Site -->
    <main id="site-main">
        <div class="container">
            <div class="box-nav d-flex justify-between">
                <div class="filter">
                    <a href="/"><i class="fas fa-angle-double-left"></i> All missions</a>
                </div>
            </div>
            <div class="form-title text-center">
                <h2 class="text-dark">Modifier une mission</h2>
            </div>

            <!-- add user form -->
            <!-- form handling -->
            <form method="POST" id="update_mission">
                <div class="new_user">
                    <div class="form-group">
                        <label for="titre" class="text-light">Titre</label>
                        <input type="hidden" name="id" value="<%= mission._id %>">
                        <input type="text" name="titre" value="<%= mission.titre %>" placeholder="Mark Stoenis">
                    </div>
                    <div class="form-group">
                        <label for="name" class="text-light">Name</label>
                        <input type="text" name="name" value="<%= mission.description %>" placeholder="Mark Stoenis">
                    </div>
                    <div class="form-group">
                        <label for="statut" class="text-light">Name</label>
                        <input type="text" name="statut" value="<%= mission.statut %>" placeholder="Mark Stoenis">
                    </div>
                    <div class="form-group">
                        <label for="metier" class="text-light">Name</label>
                        <input type="text" name="metier" value="<%= mission.metier %>" placeholder="Mark Stoenis">
                    </div>
                    <div class="form-group">
                        <label for="competence" class="text-light">Name</label>
                        <input type="text" name="competence" value="<%= mission.competence %>"
                            placeholder="Mark Stoenis">
                    </div>
                    <div class="form-group">
                        <label for="montant" class="text-light">Email</label>
                        <input type="number" name="montant" value="<%= mission.montant%>"
                            placeholder="montant.....">
                    </div>
                    
                    <div class="form-group">
                        <button type="submit" class="btn text-dark update">Save</button>
                    </div>

                </div>
            </form>

        </div>
    </main>
    <!-- /Main Site -->

    <!-- include footer -->
    <%- include('include/_footer') %>
        <!-- /include footer -->